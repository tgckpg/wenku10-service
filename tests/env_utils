#!/bin/bash

function encodeuri() {
	local length="${#1}"
	for (( i = 0; i < length; i++ )); do
		local c="${1:i:1}"
		case $c in
			[a-zA-Z0-9.~_-]) printf "$c" ;;
			*) printf "$c" | xxd -p -c1 | while read x;do printf "%%%s" "$x";done
		esac
	done
}


function compost()
{
    var=$(declare -p "$1")
    eval "declare -A data="${var#*=}

    DATA=""
    for key in ${!data[@]}; do
        DATA="$DATA${key[0]}=$( encodeuri "${data[$key]}" )&"
    done
    echo ${DATA:0:-1}
}
